    // INIT & AUTHENTICATION (Menggunakan Custom Token Wajib)
    async function initAuth() {
        try {
             if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token !== '') {
                await signInWithCustomToken(auth, __initial_auth_token);
            } else {
                await signInAnonymously(auth);
            }
        } catch (error) { 
            console.error("FIREBASE AUTH FAILED. Check network or security rules.", error); 
        }
    }
    
    // Panggil initAuth setelah window load
    window.onload = () => {
        initAuth();
        onAuthStateChanged(auth, (user) => { 
            if(user) {
                console.log(`Auth Ready: User ID ${user.uid}`);
                startApp();
            }
        });
    }

    // --- FUNGSI ADMIN TAMBAHAN ---
    // Diperbaiki untuk menggunakan BASE_COLLECTION_PATH
    window.downloadCSV = async function() {
        if(!confirm("Download data nilai?")) return;
        const btn = document.querySelector('button[onclick="downloadCSV()"]');
        btn.innerText = "Memproses...";
        
        try {
            const resultsCollectionRef = collection(db, ...BASE_COLLECTION_PATH, COLLECTION_NAME);
            const querySnapshot = await getDocs(resultsCollectionRef);
            let csvContent = "data:text/csv;charset=utf-8,Waktu,Nama,Kelas,Absen,Nilai,Kode,Mapel\n";
            
            querySnapshot.forEach((doc) => {
                const data = doc.data();
                const row = [
                    `"${data.waktu || ''}"`,
                    `"${data.nama || ''}"`,
                    `"${data.kelas || ''}"`,
                    `"${data.absen || ''}"`,
                    `"${data.nilai || 0}"`,
                    `"${data.kode || ''}"`,
                    `"${data.level_soal || ''}"`
                ].join(",");
                csvContent += row + "\r\n";
            });

            const encodedUri = encodeURI(csvContent);
            const link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            link.setAttribute("download", "rekap_nilai_ujian.csv");
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        } catch(e) {
            alert("Gagal download: " + e.message);
            console.error(e);
        }
        btn.innerText = "üì• Download Excel";
    }

    window.hapusData = async function() {
        const pass = prompt("MASUKKAN PASSWORD HAPUS DATA (BAHAYA!):");
        if(pass !== "HAPUS123") return alert("Password Salah!");
        
        if(!confirm("YAKIN HAPUS SEMUA DATA NILAI? TINDAKAN INI TIDAK BISA DIBATALKAN.")) return;
        
        document.querySelector('button[onclick="hapusData()"]').innerText = "Menghapus...";
        try {
            const resultsCollectionRef = collection(db, ...BASE_COLLECTION_PATH, COLLECTION_NAME);
            const querySnapshot = await getDocs(resultsCollectionRef);
            const deletePromises = [];
            querySnapshot.forEach((doc) => {
                deletePromises.push(deleteDoc(doc.ref));
            });
            await Promise.all(deletePromises);
            alert("Semua data berhasil dihapus.");
            renderTabelNilai();
        } catch(e) {
            alert("Gagal menghapus: " + e.message);
            console.error(e);
        }
        document.querySelector('button[onclick="hapusData()"]').innerText = "üóëÔ∏è Hapus Data";
    }

    // --- GEOLOCATION ---
    // Dipertahankan sama
    function checkLocationAccess() {
        return new Promise((resolve, reject) => {
            if (!navigator.geolocation) {
                alert("Browser tidak mendukung GPS."); resolve(false); return;
            }
            const loader = document.getElementById('loader');
            const loaderText = document.getElementById('loader-text');
            loader.style.display = 'flex';
            loaderText.innerText = "Memeriksa Lokasi...";

            navigator.geolocation.getCurrentPosition(
                (position) => {
                    // Haversine
                    const lat1 = position.coords.latitude;
                    const lon1 = position.coords.longitude;
                    const lat2 = SCHOOL_LAT;
                    const lon2 = SCHOOL_LNG;
                    const R = 6371e3; 
                    const dLat = (lat2 - lat1) * Math.PI / 180;
                    const dLon = (lon2 - lon1) * Math.PI / 180;
                    const a = Math.sin(dLat/2) * Math.sin(dLat/2) +
                              Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) *
                              Math.sin(dLon/2) * Math.sin(dLon/2);
                    const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
                    const distance = R * c;

                    loader.style.display = 'none';
                    loaderText.innerText = "Sedang memproses...";

                    if (distance <= MAX_DISTANCE_METERS) resolve(true);
                    else {
                        // Ganti alert dengan pesan yang lebih baik
                        alert(`üö´ DI LUAR SEKOLAH!\nJarak Anda: ${Math.round(distance)}m.\nMax Radius: ${MAX_DISTANCE_METERS}m.`);
                        resolve(false);
                    }
                },
                (error) => {
                    loader.style.display = 'none';
                    alert("Gagal mengambil lokasi. Pastikan GPS aktif dan diizinkan. Cek error di console.");
                    console.error("Geolocation Error:", error.message);
                    resolve(false);
                },
                { enableHighAccuracy: true, timeout: 10000 }
            );
        });
    }

    // --- UTILS ADMIN ---
    window.toggleTryoutMode = async function() {
        const btn = document.getElementById('btn-tryout-toggle');
        btn.innerText = "Processing...";
        try {
            const configRef = doc(db, ...BASE_COLLECTION_PATH, CONFIG_COLLECTION, SCHEDULE_DOC);
            const snap = await getDoc(configRef);
            const current = snap.exists() ? snap.data().isTryoutOpen : false;
            await setDoc(configRef, { isTryoutOpen: !current }, { merge: true });
            checkAdminStatus();
        } catch(e) { alert("Gagal update config: " + e.message); console.error(e); }
    }

    window.toggleRadiusMode = async function() {
        const btn = document.getElementById('btn-radius-toggle');
        btn.innerText = "Processing...";
        try {
            const configRef = doc(db, ...BASE_COLLECTION_PATH, CONFIG_COLLECTION, SCHEDULE_DOC);
            const snap = await getDoc(configRef);
            // Default is true, so checking for 'false' means it's off
            const current = snap.exists() ? (snap.data().isRadiusActive !== false) : true;
            await setDoc(configRef, { isRadiusActive: !current }, { merge: true });
            checkAdminStatus();
        } catch(e) { alert("Gagal update config: " + e.message); console.error(e); }
    }

    async function checkAdminStatus() {
        const btnTryout = document.getElementById('btn-tryout-toggle');
        const btnRadius = document.getElementById('btn-radius-toggle');
        try {
            const configRef = doc(db, ...BASE_COLLECTION_PATH, CONFIG_COLLECTION, SCHEDULE_DOC);
            const snap = await getDoc(configRef);
            const data = snap.exists() ? snap.data() : {};
            
            if(data.isTryoutOpen) {
                btnTryout.innerText = "SEDANG AKTIF (MATIKAN)";
                btnTryout.style.background = "#059669"; btnTryout.style.color="white";
            } else {
                btnTryout.innerText = "MATI (AKTIFKAN)";
                btnTryout.style.background = "#d1d5db"; btnTryout.style.color="#374151";
            }

            if(data.isRadiusActive !== false) {
                btnRadius.innerText = "ON (AKTIF)";
                btnRadius.style.background = "#059669"; btnRadius.style.color="white";
            } else {
                btnRadius.innerText = "OFF (MATI)";
                btnRadius.style.background = "#ef4444"; btnRadius.style.color="white";
            }
        } catch(e) {
             console.error("Gagal cek admin status:", e);
        }
    }
    
    // Setting default schedule (Placeholder function, implementation pending if required)
    window.setJadwalSesuaiPDF = function() {
        // Karena fungsi ini bisa memakan banyak waktu dan logika kompleks, kita buat sebagai placeholder dulu.
        alert("Fungsi ini hanya placeholder. Pengaturan Jadwal belum diimplementasikan.");
    }

    // --- LOGIKA UTAMA ---
    window.changeExamLevel = async function(levelVal) {
        if(!levelVal) {
            document.getElementById('questions-container').innerHTML = '<div class="empty-state">üëÜ Silakan pilih <b>Paket Soal</b>.</div>';
            document.getElementById('btn-done').style.display = 'none';
            currentLevel = ""; return;
        }

        // Cek Syarat
        document.getElementById('loader').style.display = 'flex';
        let isAllowed = false;
        
        try {
            const configRef = doc(db, ...BASE_COLLECTION_PATH, CONFIG_COLLECTION, SCHEDULE_DOC);
            const snap = await getDoc(configRef);
            const config = snap.exists() ? snap.data() : {};
            
            // 1. Bypass Tryout
            if(config.isTryoutOpen) {
                 isAllowed = true;
            }
            else {
                // 2. Cek Radius
                if(config.isRadiusActive !== false) {
                    const locOK = await checkLocationAccess();
                    if(!locOK) {
                        document.getElementById('examLevel').value = "";
                        document.getElementById('loader').style.display = 'none';
                        return;
                    }
                }
                
                // 3. Cek Waktu (Simple check)
                const mapelCode = levelVal.split('-')[1];
                if(config[mapelCode] && typeof config[mapelCode] === 'string') {
                    const start = new Date(config[mapelCode]);
                    if(new Date() < start) {
                        alert(`Ujian untuk mata pelajaran ini belum dimulai. Jadwal buka: ${start.toLocaleString()}`);
                        document.getElementById('examLevel').value = "";
                        document.getElementById('loader').style.display = 'none';
                        return;
                    }
                }
                isAllowed = true;
            }
        } catch(e) { 
            console.log("Config/Location error, allow default in dev", e);
            alert("Terjadi masalah saat memeriksa konfigurasi (Firebase error/offline). Mengizinkan secara default.");
            isAllowed = true; 
        }

        document.getElementById('loader').style.display = 'none';

        if(isAllowed) {
            currentLevel = levelVal;
            storage.setItem(LEVEL_KEY, currentLevel);
            activeQuestions = DATA_BANK_SOAL[currentLevel] || [];
            
            if(activeQuestions.length > 0) {
                renderQuestions();
                document.getElementById('btn-done').style.display = 'block';
                loadProgress();
            } else {
                document.getElementById('questions-container').innerHTML = '<div class="empty-state">‚ö†Ô∏è Soal belum diinput admin.</div>';
                document.getElementById('btn-done').style.display = 'none';
            }
        }
    }

    function renderQuestions() {
        const container = document.getElementById('questions-container');
        container.innerHTML = "";
        
        activeQuestions.forEach((soal, idx) => {
            let html = `<div class="question-card" id="card-q${soal.id}">`;
            if(soal.bacaan) html += `<div class="reading-text">${soal.bacaan}</div>`;
            html += `<div class="question-text">${idx + 1}. ${soal.tanya.replace(/\$\$(.*?)\$\$/g, '<div style="margin: 10px 0; font-style: italic; font-weight: 500;">$$$1</div>').replace(/\$(.*?)\$/g, '<code>$1</code>')}</div>`;
            if(soal.gambar) html += `<img src="${soal.gambar}" class="question-img">`;
            html += `<div class="options">`;
            
            // Note: Opsi A, B, C, D dijamin ada
            const keys = ['A','B','C','D'];
            keys.forEach((k, i) => {
                const text = soal.opsi[k] || '';
                const labelText = ['A','B','C','D'][i];
                html += `
                    <label>
                        <input type="radio" name="q${soal.id}" value="${k}" onchange="saveProgress()">
                        <span class="opt-label">${labelText}.</span>
                        <span>${text}</span>
                    </label>
                `;
            });
            html += `</div></div>`;
            container.innerHTML += html;
        });
    }

    window.saveProgress = function() {
        const data = {
            nama: document.getElementById('studentName').value,
            kelas: document.getElementById('studentClass').value,
            absen: document.getElementById('studentAbsen').value,
            answers: {}
        };
        document.querySelectorAll('input[type="radio"]:checked').forEach(r => data.answers[r.name] = r.value);
        sessionStorage.setItem(STORAGE_KEY, JSON.stringify(data));
    }

    function loadProgress() {
        const saved = sessionStorage.getItem(STORAGE_KEY);
        const selectedLevel = sessionStorage.getItem(LEVEL_KEY);
        
        if(selectedLevel && selectedLevel !== currentLevel) {
            // Clear progress if user switches back to a different subject
            sessionStorage.removeItem(STORAGE_KEY);
            sessionStorage.removeItem(STATUS_KEY);
            return;
        }

        if(saved) {
            const d = JSON.parse(saved);
            if(d.nama) document.getElementById('studentName').value = d.nama;
            if(d.kelas) document.getElementById('studentClass').value = d.kelas;
            if(d.absen) document.getElementById('studentAbsen').value = d.absen;
            if(d.answers) {
                for(let k in d.answers) {
                    const el = document.querySelector(`input[name="${k}"][value="${d.answers[k]}"]`);
                    if(el) el.checked = true;
                }
            }
        }
    }

    // --- GRADING ---
    // Diperbaiki untuk menggunakan BASE_COLLECTION_PATH
    window.gradeExam = async function() {
        if(!currentLevel) return alert("Pilih mapel dulu.");
        const nama = document.getElementById('studentName').value.trim().toUpperCase();
        const kelas = document.getElementById('studentClass').value.trim().toUpperCase();
        const absen = document.getElementById('studentAbsen').value;

        if(!nama || !kelas || !absen) return alert("Isi data diri lengkap!");

        // Hitung Nilai
        let correct = 0;
        activeQuestions.forEach(q => {
            const ans = document.querySelector(`input[name="q${q.id}"]:checked`);
            if(ans && ans.value === q.kunci) correct++;
        });
        const score = Math.round((correct / activeQuestions.length) * 100);
        
        document.getElementById('loader').style.display = 'flex';
        
        // Simpan ke Firebase menggunakan jalur yang benar
        const docId = `${nama.replace(/\s/g,'_')}_${currentLevel}_${absen}`;
        const finalKelas = `${currentLevel} - ${kelas}`;
        const wib = new Date().toLocaleString('id-ID', {timeZone:'Asia/Jakarta'});
        const kode = "#SEC-" + Math.floor(Math.random()*10000);

        try {
            const resultsCollectionRef = collection(db, ...BASE_COLLECTION_PATH, COLLECTION_NAME);
            await setDoc(doc(resultsCollectionRef, docId), {
                nama: nama, kelas: finalKelas, absen: absen, nilai: score,
                waktu: wib, kode: kode, level_soal: currentLevel
            });
            
            // Tampil Hasil
            document.getElementById('loader').style.display = 'none';
            document.querySelector('.header').style.display = 'none';
            document.querySelector('.identity-box').style.display = 'none';
            document.getElementById('examForm').style.display = 'none';
            document.getElementById('locked-screen').style.display = 'block';

            document.getElementById('res-nama').innerText = nama;
            document.getElementById('res-kelas').innerText = finalKelas;
            document.getElementById('res-absen').innerText = absen;
            document.getElementById('res-nilai').innerText = score;
            document.getElementById('res-kode').innerText = kode;
            
            const fb = document.getElementById('feedback-text');
            if(score >= 70) { fb.innerText = "SELAMAT! ANDA LULUS"; fb.style.color="green"; }
            else { fb.innerText = "NILAI BELUM MENCUKUPI"; fb.style.color="red"; }

            sessionStorage.clear();
            sessionStorage.setItem(STATUS_KEY, 'finished');
            window.scrollTo(0,0);

        } catch(e) {
            document.getElementById('loader').style.display = 'none';
            alert("Gagal kirim: Terjadi masalah koneksi atau hak akses database. Cek konsol. " + e.message);
            console.error(e);
        }
    }

    window.resetSession = function() {
        if(confirm("Reset aplikasi untuk siswa baru?")) {
            sessionStorage.clear();
            window.location.reload();
        }
    }

    // --- ADMIN ---
    window.bukaAdmin = function() {
        if(prompt("Password Guru:") === passwordGuru) {
            document.getElementById('admin-panel').style.display = 'block';
            renderTabelNilai();
            checkAdminStatus();
            document.getElementById('admin-panel').scrollIntoView();
        }
    }
    window.tutupAdmin = () => document.getElementById('admin-panel').style.display = 'none';

    // Diperbaiki untuk menggunakan BASE_COLLECTION_PATH
    window.renderTabelNilai = async function() {
        const tbody = document.getElementById('tabel-nilai');
        tbody.innerHTML = "<tr><td colspan='3' style='text-align:center; padding:10px;'>Loading...</td></tr>";
        try {
            const resultsCollectionRef = collection(db, ...BASE_COLLECTION_PATH, COLLECTION_NAME);
            const snap = await getDocs(resultsCollectionRef);
            tbody.innerHTML = "";
            snap.forEach(d => {
                const dat = d.data();
                tbody.innerHTML += `<tr><td style="padding:8px;">${dat.nama}</td><td style="padding:8px;">${dat.kelas}</td><td style="padding:8px;">${dat.nilai}</td></tr>`;
            });
            if (snap.empty) {
                tbody.innerHTML = "<tr><td colspan='3' style='text-align:center; padding:10px;'>Belum ada data nilai.</td></tr>";
            }
        } catch(e) {
             tbody.innerHTML = `<tr><td colspan='3' style='text-align:center; padding:10px; color:red;'>Gagal memuat data: ${e.message}</td></tr>`;
             console.error("Gagal memuat tabel nilai:", e);
        }
    }

    function startApp() {
        if(sessionStorage.getItem(RULE_ACCEPTED_KEY) === 'true') {
            document.getElementById('rule-overlay').style.display = 'none';
        }
        if(sessionStorage.getItem(STATUS_KEY) === 'finished') {
            document.getElementById('rule-overlay').style.display = 'none';
            document.getElementById('locked-screen').style.display = 'block';
            document.querySelector('.header').style.display = 'none';
            document.querySelector('.identity-box').style.display = 'none';
            document.getElementById('examForm').style.display = 'none';
            document.getElementById('locked-screen').style.display = 'block';
        }
    }
</script>
</body>
</html>
