<!-- SCRIPT STANDAR UNTUK TOMBOL MULAI (DIJAMIN JALAN) -->
<script>
    function acceptRulesStandard() {
        const overlay = document.getElementById('rule-overlay');
        if(overlay) overlay.style.display = 'none';
        sessionStorage.setItem('exam_rule_accepted_v2', 'true');
        const mapelSelect = document.getElementById('examLevel');
        if(mapelSelect) {
            mapelSelect.scrollIntoView({ behavior: 'smooth', block: 'center' });
            mapelSelect.focus();
        }
    }
</script>

<!-- LOGIKA APLIKASI UTAMA (MODULE) -->
<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
    import { getFirestore, collection, doc, setDoc, getDoc, getDocs, deleteDoc, query, where } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
    import { getAuth, signInAnonymously, onAuthStateChanged, signInWithCustomToken } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";

    // ====================================================================================
    // ‚ö†Ô∏è PERBAIKAN PENTING UNTUK CANVAS (LINGKUNGAN INI)
    // Jika Anda ingin kode ini berjalan di GitHub Pages, Anda harus GANTI BARIS di bawah
    // dengan konfigurasi Firebase Anda yang hardcoded (seperti yang Anda berikan sebelumnya).
    // Di lingkungan ini (Canvas), konfigurasi harus diakses melalui variabel global.
    // ====================================================================================
    
    // Inisialisasi Firebase menggunakan variabel lingkungan wajib
    const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');
    const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);
    
    // --- KONFIGURASI KOLEKSI ---
    const BASE_COLLECTION_PATH = ['artifacts', appId, 'public', 'data']; // Wajib Public Path
    const COLLECTION_NAME = 'exam_results_all_subjects_v2'; 
    const CONFIG_COLLECTION = 'exam_config'; 
    const SCHEDULE_DOC = 'schedule'; 
    const passwordGuru = "!@#$%^&*()"; 

    // --- KONFIGURASI LOKASI SEKOLAH ---
    const SCHOOL_LAT = -7.927000;
    const SCHOOL_LNG = 110.297806;
    const MAX_DISTANCE_METERS = 400;

    // --- VARIABEL STATE ---
    let currentLevel = ""; 
    let activeQuestions = []; 
    let isExamFinished = false; 
    const storage = sessionStorage; 

    // Kunci Storage
    let STORAGE_KEY = 'exam_data_v2'; 
    let ORDER_KEY = 'exam_order_v2';
    const STATUS_KEY = 'exam_status_v2'; 
    const RULE_ACCEPTED_KEY = 'exam_rule_accepted_v2';
    const LEVEL_KEY = 'exam_selected_level_v2'; 

    // --- BANK SOAL (TETAP SAMA) ---
    const DATA_BANK_SOAL = {
        // --- SOAL PJOK KELAS 7 (NEW - 40 Questions) ---
        "7-PJOK": [
            { id: 1, tanya: "Dalam permainan sepak bola ada berbagai tehnik/gerakan yang diterapkan. Gerakan yang dominan dilakukan dalam permainan sepak bola adalah...", opsi: {A: "menendang bola", B: "menggiring bola", C: "menahan bola", D: "menyundul bola"}, kunci: "B" },
            { id: 2, tanya: "Telapak kaki yang digunakan untuk menahan ke bola diputar keluar, sehingga kaki bagian dalam menghadap arah datangnya bola, teknik ini merupakan cara menahan bola dengan menggunakan...", opsi: {A: "kaki bagian dalam", B: "kaki bagian luar", C: "telapak kaki", D: "Kura-kura kaki"}, kunci: "A" },
            { id: 3, tanya: "Perhatikan pernyataan berikut! (1) Menggiring (2) Servis (3) Menendang (4) Smash (5) Shooting. Berdasarkan pernyataan tersebut yang termasuk gerak spesifik dalam permainan sepak bola adalah...", opsi: {A: "(1) dan (2)", B: "(1) dan (3)", C: "(2) dan (4)", D: "(2) dan (5)"}, kunci: "B" },
