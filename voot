    const mapelKeys = ["9-ING","7-INDO","8-INDO","9-INDO","7-IPA","8-IPA","7-IPS","8-IPS","9-IPS","8-PABP","7-INFO","8-INFO","7-MTK","8-MTK","9-MTK","7-BJAWA","8-BJAWA","9-BJAWA","7-SENBUD","8-SENBUD","9-SENBUD","7-PABP","8-PABP","8-ING","9-ING"];
